<% provide(:title, 'Discuss') %>
<h1>Invitations</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% names = Invitation.joins(:group).select(:name).where(is_accepted: false,receiver_id: current_user.id) %>
    <ul>
    	<% names.each do |name|%>
    	<li>
    		<%= "Invitation from group #{name['name']} is pending" %>
    	</li>
    	<% end %>
    </ul>
  </div>
</div>